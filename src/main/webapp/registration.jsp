						<figure>
							<!-- <div id="image-container"></div> -->
							<img id = "image-container" src = "images/India3.jpeg" style = "height: 400px " style =" width : 400px">
							<!-- <img src="images/India3.jpeg" alt="sing up image"> -->
						</figure>
						<a href="login.jsp" class="signup-image-link">I am already
							member</a>
					</div>
