<script type="text/javascript">

	var status = document.getElementById("status").value;
	if(status == "success"){
		swal("Congrats","registration" , "successfull");
	}

var images = ["images/India1.jpeg", "images/India2.jpeg", "images/India3.jpeg"];

// Shuffle the images using the Fisher-Yates algorithm
function shuffle(array) {
  var currentIndex = array.length, temporaryValue, randomIndex;
  while (0 !== currentIndex) {
    randomIndex = Math.floor(Math.random() * currentIndex);
    currentIndex--;
    temporaryValue = array[currentIndex];
    array[currentIndex] = array[randomIndex];
    array[randomIndex] = temporaryValue;
  }
  return array;
}
images = shuffle(images);

// Display the images turn by turn in a loop
var i = 0;
setInterval(function() {
  var image = document.getElementById("image-container");
  image.src = images[i];
  i = (i+1)%images.length;
}, 2000); // Change the time interval (in milliseconds) to adjust the speed of the loop

